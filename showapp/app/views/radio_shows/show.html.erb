<div class="panel panel-default"> 
                    <!-- <div class="panel-heading">
                        <h3 class="panel-title text-center">Please Register</h3>
                    </div> -->
                    <div class="panel-body"> 


<p id="notice"><%= notice %></p>


<p>
  <strong>Name:</strong>
  <%= @radio_show.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @radio_show.description %>
</p>
<table class="table table-striped">
  <thead class="table table-striped">
    <tr>
      <th>Segment Name</th>
      <th>Show Day</th>
      <th>Show Start Time</th>
      <th>Show End Time</th>
      <th></th>
    </tr>
  </thead>

<div id="txt" style="font:40px bold "></div>
<tbody class="table table-striped">
<%@radio_show.show_timings.each do |show_timing|%>
    <tr>
        <td><%= show_timing.segment_name %>
        <td><%= show_timing.day %></td>
        <td><%= show_timing.startTime.strftime("%r"); %></td>
        <td><%= show_timing.endTime.strftime("%r"); %></td>
      </tr>
<%end%>
</tbody>
</table>


<%= link_to 'Edit', edit_radio_show_path(@radio_show) %> |
<%=  link_to 'Destroy', @radio_show, method: :delete, data: { confirm: 'Are you sure?' }  %>
</div> 
</div> 
<style>
.panel{
    background: rgba(255,255, 255, 0.7);
    box-shadow: rgba(0, 0, 0, 0.3) 10px 10px 10px;
    width:700px;
    
    
}

</style>
